{
    // -------------------------------------------------------------------------
    // CORE PYTHON CONFIGURATION
    // -------------------------------------------------------------------------
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // Testing: Uses pytest as configured in pyproject.toml
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": ["tests"],

    // Type Checking (Handled by Pylance with Mypy config from pyproject.toml)
    "python.analysis.typeCheckingMode": "strict", // Use strict to match mypy's strict=true config
    "python.analysis.autoImportCompletions": true,

    // The old `python.linting.*` settings are replaced by the Ruff extension:

    // -------------------------------------------------------------------------
    // FORMATTING AND LINTING CONSISTENCY
    // -------------------------------------------------------------------------
    "editor.formatOnSave": true,

    // RUFF (Python Formatting & Linting)
    "editor.defaultFormatter": "charliermarsh.ruff",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            // Apply Ruff fixes/auto-imports on save (Equivalent to pre-commit ruff-check --fix)
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
        }
    },

    // PRETTIER (Web/Config Formatting)
    "prettier.enable": true,
    "prettier.configPath": ".prettierrc.yaml", // Respects your global Prettier configuration

    // Explicitly set Prettier as default for file types handled by your pre-commit
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[yaml]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

    // Markdown: Align markdownlint with your mdformat pre-commit rule
    "markdownlint.config": {
        "line-length": 120
    },

    // -------------------------------------------------------------------------
    // FILE EXCLUSIONS
    // -------------------------------------------------------------------------
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true
    }
}
